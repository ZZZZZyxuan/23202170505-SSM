<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zhengyuxuan.mapper.ReviewMapper">

    <!-- 评论结果映射 -->
    <resultMap id="ReviewResultMap" type="Review">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="movieId" column="movie_id"/>
        <result property="rating" column="rating"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!-- 评论结果映射（包含用户信息） -->
    <resultMap id="ReviewWithUserResultMap" type="Review" extends="ReviewResultMap">
        <association property="user" javaType="User">
            <id property="id" column="user_id"/>
            <result property="username" column="username"/>
            <result property="nickname" column="nickname"/>
            <result property="avatar" column="avatar"/>
        </association>
    </resultMap>

    <!-- 评论结果映射（包含电影信息） -->
    <resultMap id="ReviewWithMovieResultMap" type="Review" extends="ReviewResultMap">
        <association property="movie" javaType="Movie">
            <id property="id" column="movie_id"/>
            <result property="title" column="title"/>
            <result property="poster" column="poster"/>
            <result property="genre" column="genre"/>
            <result property="region" column="region"/>
        </association>
    </resultMap>

    <!-- 根据ID查询评论 -->
    <select id="selectById" resultMap="ReviewResultMap">
        SELECT id, user_id, movie_id, rating, content, create_time
        FROM t_review
        WHERE id = #{id}
    </select>

    <!-- 根据电影ID查询评论列表（包含用户信息） -->
    <select id="selectByMovieId" resultMap="ReviewWithUserResultMap">
        SELECT r.id, r.user_id, r.movie_id, r.rating, r.content, r.create_time,
               u.username, u.nickname, u.avatar
        FROM t_review r
        LEFT JOIN t_user u ON r.user_id = u.id
        WHERE r.movie_id = #{movieId}
        ORDER BY r.create_time DESC
    </select>

    <!-- 根据用户ID查询评论列表（包含电影信息） -->
    <select id="selectByUserId" resultMap="ReviewWithMovieResultMap">
        SELECT r.id, r.user_id, r.movie_id, r.rating, r.content, r.create_time,
               m.title, m.poster, m.genre, m.region
        FROM t_review r
        LEFT JOIN t_movie m ON r.movie_id = m.id
        WHERE r.user_id = #{userId}
        ORDER BY r.create_time DESC
    </select>

    <!-- 根据用户ID和电影ID查询评论 -->
    <select id="selectByUserAndMovie" resultMap="ReviewResultMap">
        SELECT id, user_id, movie_id, rating, content, create_time
        FROM t_review
        WHERE user_id = #{userId} AND movie_id = #{movieId}
    </select>

    <!-- 插入新评论 -->
    <insert id="insert" parameterType="Review" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_review (user_id, movie_id, rating, content, create_time)
        VALUES (#{userId}, #{movieId}, #{rating}, #{content}, NOW())
    </insert>

    <!-- 更新评论 -->
    <update id="update" parameterType="Review">
        UPDATE t_review
        SET rating = #{rating}, content = #{content}
        WHERE id = #{id}
    </update>

    <!-- 删除评论 -->
    <delete id="delete">
        DELETE FROM t_review WHERE id = #{id}
    </delete>

    <!-- 计算电影的平均评分 -->
    <select id="calculateAvgRating" resultType="Double">
        SELECT AVG(rating) FROM t_review WHERE movie_id = #{movieId}
    </select>

    <!-- 统计电影的评分人数 -->
    <select id="countByMovieId" resultType="Integer">
        SELECT COUNT(*) FROM t_review WHERE movie_id = #{movieId}
    </select>

</mapper>

